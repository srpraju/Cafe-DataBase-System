{
  "$schema": "./node_modules/@angular-devkit/schematics/collection-schema.json",
  "name": "kendo-angular-schematics",
  "schematics": {
    "test-component": {
      "description": "Generates a component containing Kendo Angular Grid component",
      "schema": "./src/component/schema.json",
      "factory": "./src/component/index#testComponent",
      "hidden": true
    },
    "ng-add": {
      "description": "Register Kendo Angular components",
      "schema": "./src/ngAdd/schema.json",
      "factory": "./src/ngAdd/index#ngAdd"
    },
    "grid": {
      "progress:scaffold-category": "page",
      "description": "Generates a component containing Kendo Angular Grid component.",
      "factory": "./src/grid",
      "schema": "./src/grid/schema.json"
    },
    "chart": {
      "progress:scaffold-category": "page",
      "description": "Generates a component containing Kendo Angular Chart component.",
      "factory": "./src/chart",
      "schema": "./src/chart/schema.json"
    },
    "scheduler": {
      "progress:scaffold-category": "page",
      "description": "Generates a component containing Kendo Angular Scheduler component.",
      "factory": "./src/scheduler",
      "schema": "./src/scheduler/schema.json"
    }
  }
}
